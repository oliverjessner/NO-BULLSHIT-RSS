{
    "name": "no-bullshit-rss",
    "version": "1.0.0",
    "type": "module",
    "description": "RSS-based news aggregator",
    "main": "electron/main.cjs",
    "scripts": {
        "start": "node src/server.js",
        "electron": "electron .",
        "dev": "node --watch src/server.js",
        "db:init": "node src/init-db.js",
        "logos:refresh": "node src/scripts/refresh-logos.js",
        "postinstall": "echo \"skip\"",
        "rebuild:sqlite3": "electron-rebuild -f -w @vscode/sqlite3",
        "pack": "electron-rebuild -f -w @vscode/sqlite3 && electron-builder --dir",
        "dist": "electron-rebuild -f -w @vscode/sqlite3 && electron-builder",
        "dist:all": "electron-rebuild -f -w @vscode/sqlite3 && electron-builder --mac --win --linux"
    },
    "dependencies": {
        "@vscode/sqlite3": "5.1.12-vscode",
        "express": "^5.2.1",
        "iconv-lite": "^0.6.3",
        "rss-parser": "^3.13.0"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.oliverjessner.no-bullshit-rss",
        "productName": "NO BULLSHIT RSS",
        "files": [
            "electron/**",
            "src/**",
            "public/**",
            "sql/**",
            "sources.json",
            "package.json",
            "build/icons/**",
            "node_modules/**"
        ],
        "icon": "build/icons/icon.icns",
        "asarUnpack": [
            "node_modules/@vscode/sqlite3/**"
        ],
        "mac": {
            "icon": "build/icons/icon.icns"
        }
    }
}
