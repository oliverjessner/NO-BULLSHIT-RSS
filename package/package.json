{
    "name": "no-bullshit-rss",
    "version": "1.0.0",
    "type": "module",
    "description": "RSS-based news aggregator",
    "main": "electron/main.cjs",
    "scripts": {
        "start": "node src/server.js",
        "electron": "electron .",
        "dev": "node --watch src/server.js",
        "db:init": "node src/init-db.js",
        "logos:refresh": "node src/scripts/refresh-logos.js",
        "postinstall": "echo \"skip\"",
        "rebuild:sqlite3": "electron-rebuild -f -w sqlite3",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "dependencies": {
        "express": "^4.19.2",
        "iconv-lite": "^0.6.3",
        "rss-parser": "^3.13.0",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.oliverjessner.no-bullshit-rss",
        "productName": "No Bullshit RSS",
        "files": [
            "electron/**",
            "src/**",
            "public/**",
            "sql/**",
            "sources.json",
            "package.json",
            "build/icons/**"
        ],
        "icon": "build/icons/icon.icns",
        "mac": {
            "icon": "build/icons/icon.icns"
        }
    }
}
